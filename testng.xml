<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name= "GroupSuite">
    <parameter name="number-positive"  value="8"/>

    <test name= "scapeRoomTest">
        <groups>
            <run>
            <include name="scapeRoom" />
            </run>
        </groups>
        <classes>
            <class name="com.example.ScapeRoom" />
        </classes>
    </test>

    <test name= "negativeTest">
        <groups>
            <run>
            <include name="negative-tests" />
            </run>
        </groups>
        <classes>
            <class name="com.example.GroupTest" />
        </classes>
    </test>
    <test name= "positiveTest">
        <groups>
            <run>
            <include name="positive-tests" />
            </run>
        </groups>
        <classes>
            <class name="com.example.GroupTest" />
        </classes>
    </test>

    <test name= "basicTest">
        <groups>
            <run>
            <include name="basic" />
            </run>
        </groups>
        <classes>
            <class name="com.example.BankAccountTest" />
        </classes>
    </test>

    <test name= "hooksTest">
        <groups>
            <run>
            <include name="hooks" />
            </run>
        </groups>
        <classes>
            <class name="com.example.HookBankAccountTest" />
        </classes>
    </test>

    <test name= "dataProvideTest">
        <groups>
            <run>
            <include name="data" />
            </run>
        </groups>
        <classes>
            <class name="com.example.DataBankAccountTest" />
        </classes>
    </test>

    <test name= "ExceptTest">
        <groups>
            <run>
            <include name="except" />
            </run>
        </groups>
        <classes>
            <class name="com.example.ExceptionBankAccountTest" />
        </classes>
    </test>

    <test name= "DependencyTest">
        <groups>
            <run>
            <include name="init" />
            </run>
        </groups>
        <classes>
            <class name="com.example.DependencyTest" />
        </classes>
    </test>

    <test name= "BonusClass">
        <groups>
            <run>
            <include name="transfer" />
            </run>
        </groups>
        <classes>
            <class name="com.example.bonusClass" />
        </classes>
    </test>

</suite>



